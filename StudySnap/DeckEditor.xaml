<Window x:Class="StudySnap.DeckEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudySnap"
        mc:Ignorable="d"
        Title="Deck Editor" Height="793" Width="1000"
        MinHeight="523" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Closing="DeckEditorWindowClosing" MouseDown="Window_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="325"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Background -->
        <Rectangle Grid.Row="1" Grid.ColumnSpan="2" Fill="#F6F6F8"/>

        <!-- Title bar -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      Style="{StaticResource TransparentComboBoxStyle}"
                      HorizontalAlignment="Left" VerticalAlignment="Center"
                      Margin="25,0,0,0" Width="40" Height="35"
                      VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                      ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=IconsList}"
                      SelectedItem="{Binding IconPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ToolTip="Click to change deck icon">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Image Source="{Binding}" Width="24" Height="24"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="18" FontWeight="ExtraBold" Foreground="#1F2937"
                     HorizontalAlignment="Left" VerticalAlignment="Center"
                     Background="Transparent" BorderThickness="0"
                     Margin="0,0,20,0" TextAlignment="Center" MinWidth="100"
                     ToolTip="Click to edit deck name"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        VerticalAlignment="Center" Margin="0,0,35,0">
                <Button Content="Delete Deck" Style="{StaticResource TextOnlyButton}"
                        Foreground="#EF4444" FontWeight="Bold"
                        Margin="0,0,20,0" Click="DeleteDeckClick"/>

                <Button Style="{StaticResource TextOnlyButton}"
                        Content="← Back to Dashboard"
                        Margin="0,0,20,0" Click="BackToDashboardClick"/>

                <Button Style="{StaticResource RoundedButton15}"
                        Content="Save Deck" Height="29" BorderThickness="0"
                        Background="#135BEC" Foreground="White"
                        FontSize="12" FontWeight="Bold" Margin="0,10" Padding="15,0"
                        VerticalContentAlignment="Center" Click="SaveDeckClick"/>
            </StackPanel>
        </Grid>

        <!-- Deck Panel -->
        <Rectangle Grid.Row="1" Grid.Column="0" Fill="White"
                   RadiusX="25" RadiusY="25" HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" Margin="20,85,15,20"/>

        <Grid Grid.Column="0" Grid.Row="1" Margin="20,0,15,28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Style="{StaticResource RoundedButton15}"
                    Content="Add New Card" Height="30" BorderThickness="0"
                    Background="#135BEC" Foreground="White"
                    FontSize="11" FontWeight="Bold" Margin="0,10,0,5"
                    VerticalContentAlignment="Center" Click="AddNewCardClick"/>

            <!-- AI Generate Button -->
            <Button Grid.Row="1" Height="30" BorderThickness="0"
                    FontSize="11" FontWeight="Bold" Margin="0,0,0,10"
                    VerticalContentAlignment="Center" Click="AIGenerateClick"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#8B5CF6"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="✨" Margin="0,0,6,0"/>
                                            <TextBlock Text="AI Generate" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7C3AED"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6D28D9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <ListBox Grid.Row="2" x:Name="lstbCards" SelectionMode="Single"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ItemContainerStyle="{StaticResource CardItemContainerStyle}"
                     Background="Transparent" BorderThickness="0"
                     SelectionChanged="CardSelectionChanged"
                     Padding="5,-10,5,0" Margin="0,12,0,0">

                <ListBox.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBarStyle}"/>
                </ListBox.Resources>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="278" Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="45"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="icnBorder" Width="30" Height="30" Grid.Column="0"
                                    CornerRadius="30" Background="#F3F4F6"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Image x:Name="imgIcon" Source="/Images/cards-three-dark-gray.png"
                                       Width="18" Height="18" Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel VerticalAlignment="Center" Grid.Column="1"
                                        HorizontalAlignment="Left" Margin="0,0,25,0">
                                <TextBlock Text="{Binding Front}" FontSize="13"
                                           FontWeight="SemiBold" Foreground="#1F2937"
                                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding Front}" TextAlignment="Left"/>
                            </StackPanel>
                        </Grid>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBoxItem}}, Path=IsSelected}" Value="True">
                                <Setter TargetName="icnBorder" Property="Background" Value="#BCD0F9"/>

                                <Setter TargetName="imgIcon" Property="Source" Value="/Images/cards-three-blue.png"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock x:Name="lblNoCards" Text="No cards"
                       HorizontalAlignment="Center" Margin="0,50,0,0"
                       Foreground="#9CA3AF" FontStyle="Italic"
                       Grid.Row="2"/>

            <Button x:Name="btnDeleteCard" Click="DeleteCard"
                    Grid.Row="3" Height="32" Margin="7,5,7,0"
                    BorderThickness="0" Cursor="Hand"
                    IsEnabled="False">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Image x:Name="imgTrash"
                           Source="/Images/trash-fill-gray.png"
                           Width="20" Height="20" Margin="0,0,8,0"/>

                    <TextBlock Text="Delete Card"
                               FontSize="12.5" FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FEE2E2"/>
                        <Setter Property="Foreground" Value="#DC2626"/>

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FDCACA"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FCB1B1"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#F4F4F4"/>
                                <Setter Property="Foreground" Value="#C4C4C4"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- Deck Overview -->
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="White" RadiusX="25"
                   RadiusY="25" HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" Margin="20,10,20,20"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Edit Flashcard" FontSize="25" FontWeight="Bold"
                       Foreground="#111827" Margin="40,40,40,0" Grid.Row="0"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="40,20,40,0">
                <ScrollViewer.Resources>
                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBarStyle}"/>
                </ScrollViewer.Resources>

                <StackPanel>
                    <TextBlock Text="Front (Question)" Foreground="#6B7280" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Height="100" Padding="10">
                        <TextBox x:Name="txtFront"
                         Background="Transparent" BorderThickness="0"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         FontSize="14" Foreground="#1F2937"
                         VerticalScrollBarVisibility="Auto"
                                 TextChanged="FrontTextChanged"/>
                    </Border>

                    <TextBlock Text="Back (Answer)" Foreground="#6B7280" FontWeight="SemiBold" Margin="0,20,0,8"/>
                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Height="100" Padding="10">
                        <TextBox x:Name="txtBack"
                         Background="Transparent" BorderThickness="0"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         FontSize="14" Foreground="#1F2937"
                         VerticalScrollBarVisibility="Auto"/>
                    </Border>

                    <TextBlock Text="Live Preview" Foreground="#6B7280" FontWeight="SemiBold" Margin="0,20,0,8"/>
                    <Border Background="#F3F4F6" CornerRadius="20" Height="200" Width="350" HorizontalAlignment="Left">
                        <TextBlock x:Name="lblPreview"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="18" Foreground="#1F2937"
                           TextWrapping="Wrap" TextAlignment="Center" Padding="20"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,40,40">
                <Button Style="{StaticResource RoundedButtonGray18}"
                        Content="Clear" Height="37" Width="100" BorderThickness="0"
                        Background="#E5E7EB" Foreground="#1F2937"
                        FontSize="14" FontWeight="Bold" Margin="0,0,15,0" Padding="15,0"
                        VerticalContentAlignment="Center" Click="ClearButtonClick"/>

                <Button x:Name="btnSaveCard"
                        Style="{StaticResource RoundedButtonBlue18}"
                        Content="Add Card" Height="37" Width="120"
                        Background="#135BEC" Foreground="White"
                        FontSize="14" FontWeight="Bold" BorderThickness="0"
                        VerticalContentAlignment="Center" Click="SaveCard"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

<Window x:Class="StudySnap.StudyMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudySnap"
        mc:Ignorable="d"
        Title="Study Mode" Height="700" Width="900" Background="#F6F6F8"
        WindowStartupLocation="CenterOwner" Closing="StudyModeWindowClosing">
    <Grid>
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Insert Logo Here -->
                <TextBlock x:Name="txtbDeckTitle" Text="Deck: French Verbs" FontSize="18" FontWeight="Bold" Foreground="#1C2B45"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="txtbCardCounter" Text="Card - of -" VerticalAlignment="Center" Foreground="#546E7A" Margin="0,0,15,0" FontWeight="SemiBold"/>
            </StackPanel>

        </Grid>

        <!-- Flashcard Display Area -->
        <Border Grid.Row="1" Background="White"
                CornerRadius="20" Margin="40,20" Padding="0,40"
                MouseLeftButtonDown="Card_MouseDown" Cursor="Hand">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="20" ShadowDepth="5" Opacity="0.1"/>
            </Border.Effect>
            <!-- Flashcard Content -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- front of card content (question) -->
                <TextBlock Text="FRONT" Foreground="#9DA8B8" FontSize="12" FontWeight="Bold"
                   HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtbFrontText" Text="Parler" FontSize="32" FontWeight="Bold" Foreground="#1C2B45"
                   HorizontalAlignment="Center" Margin="0,10,0,30"
                           TextWrapping="Wrap"/>

                <!-- Border to split sides -->
                <Border Height="1" Background="#E0E6ED" Width="300" Margin="0,0,0,30"/>

                <!-- Back of card content (answer) -->
                <TextBlock Text="BACK" Foreground="#9DA8B8" FontSize="12" FontWeight="Bold"
                   HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtbBackText" Text="To speak" FontSize="32" FontWeight="Bold" Foreground="#1C2B45"
                   HorizontalAlignment="Center" Margin="0,10,0,0"
                           TextWrapping="Wrap"/>

                <TextBlock x:Name="ClickToRevealText" Text="(Click card to reveal)" Foreground="#B0BEC5"
                           FontSize="14" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Action Buttons Panel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
            HorizontalAlignment="Center" Margin="0,20,0,40">
            <!-- Right Button -->
            <Button x:Name="BtnRight"
            Style="{StaticResource StudyButtonStyle}"
            Content="I got it right"
            Foreground="#2E7D32"
            Background="#E8F5E9"
            Click="RightButton_Click"/>
            <!-- Wrong Button -->
            <Button x:Name="BtnWrong"
            Style="{StaticResource StudyButtonStyle}"
            Content="I got it wrong"
            Foreground="#C62828"
            Background="#FFEBEE"
            Click="WrongButton_Click"/>
        </StackPanel>

        <!-- Footer Section -->
        <Grid Grid.Row="3" Margin="40,0,40,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Foreground="#1C2B45" FontWeight="Bold">
            Score: <Run x:Name="ScoreRun" Text="80%" FontWeight="Normal"/>
                </TextBlock>
                <TextBlock Foreground="#1C2B45" FontWeight="Bold" Margin="20,0,0,0">
            Correct: <Run x:Name="CorrectRun" Text="4" FontWeight="Normal"/>
                </TextBlock>
                <TextBlock Foreground="#1C2B45" FontWeight="Bold" Margin="20,0,0,0">
            Incorrect: <Run x:Name="IncorrectRun" Text="1" FontWeight="Normal"/>
                </TextBlock>
            </StackPanel>

            <TextBlock Text="End Session" HorizontalAlignment="Right"
                       Foreground="#1C2B45" FontWeight="Bold" Cursor="Hand"
                       MouseLeftButtonDown="EndSession_Click"/>
        </Grid>
    </Grid>
</Window>

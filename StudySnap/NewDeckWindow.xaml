<Window x:Class="StudySnap.NewDeckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudySnap"
        mc:Ignorable="d"
        Title="NewDeckWindow" Height="175" Width="400"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Background="Transparent" AllowsTransparency="True"
        ShowInTaskbar="False">
    <Border Background="White" CornerRadius="20" BorderBrush="#E5E7EB"
            BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Name your new deck" FontSize="18" FontWeight="Bold"
                       Foreground="#111827" Margin="0,0,0,10"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBox x:Name="txtbDeckName" FontSize="14" Padding="10"
                         VerticalContentAlignment="Center"
                         BorderThickness="1" BorderBrush="#D1D5DB"
                         Background="#F9FAFB">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="Cancel" Click="CancelClick" Width="80"
                        Height="35" Margin="0,0,10,0" Background="Transparent"
                        BorderThickness="0" Foreground="#6B7280" FontWeight="SemiBold"
                        Cursor="Hand"/>

                <Button Content="Create" Click="CreateClick" Width="100"
                        Height="35" Background="#135BEC" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="17"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
